# 			displayUsageAndExit
# 			;;
# 	esac
# 	shift
# done

echo $DOTFILES
echo $DOTFILES
echo $DOTFILES
echo $DOTFILES
echo $DOTFILES

#export DOTFILES=$HOME/.dotfiles

# Init git
$DOTFILES/homebrew/git/install.sh

# Set macOS defaults
$DOTFILES/macos/set-defaults.sh

# Install Homebrew
$DOTFILES/homebrew/install.sh 2>&1

# Install software
echo "â€º $DOTFILES/script/install"
